<view class="container">
  <image src="{{articleImg}}" class='head-img'></image>
  <view class="author-data">
    <image class="authorIcon" src="{{authorIcon}}"></image>
    <text class="author">{{authorName}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{create_time}}</text>
    <image bindtap='playMusic' src="{{musicflag ? '../../images/earphone.png' : '../../images/eartag.png'}}" class="music"></image>
  </view>
  <text class="title">{{title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image src="../../images/sc.png"></image>
      <image src="../../images/fx.png" class="share-img"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{articleText}}</text>
  <view class="comment">
    <view class="commentblock">评价</view>
    <view class="line"></view>
    <view class="comment-user">
      <view class="conmment-user-info">
        <image src="../../images/head1.png"></image>
        <text>crh</text>
      </view>
      <text class="comment-text">
        很好。
      </text>
    </view>
  </view>
</view>
