.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
}

.author-data {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.authorIcon {
  height: 64rpx;
  width: 64rpx;
}

.author {
  font-size: 30rpx;
    font-weight: 700;
    margin-left: 20rpx;
    color:#666;
}

.const-text{
    font-size: 24rpx;
    color:#999;
    margin-left: 20rpx;
}

.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    color: #999;
}

.music{
    width: 60rpx;
    height: 60rpx;
    margin-left: 40rpx;
}

.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}

.tool{
    margin-top: 20rpx;
}

.circle-img{
  display: flex;
  justify-content:flex-end;
  margin-right: 40rpx;
}

.circle-img image{
    width: 50rpx;
    height: 50rpx;
}

.share-img{
    margin-left: 30rpx;
}

.horizon{
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail{
    color:#666;
    margin-top: 20rpx;
    margin-right: 30rpx;
    margin-left: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    font-size: 24rpx;
}

.comment{
    padding: 20rpx;
    margin-top: 20rpx;
}

.commentblock{
    border-left: 10rpx solid #F68344;
    padding-left: 20rpx;
}

.line{
    width: 100%;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 30rpx;
    margin: 0 auto;
}

.comment-user{
    flex-direction: column;
}

.conmment-user-info{
    flex-direction: row;
    margin-top: 50rpx;
}

.conmment-user-info image{
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}

.conmment-user-info text{
    font-size: 25rpx;
    font-weight: 700;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #999;
}

.comment-text{
    font-size: 20rpx;
    color: #666;
    vertical-align: middle;
}
